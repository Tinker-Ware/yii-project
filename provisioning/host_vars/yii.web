## Mysql
mysql_root_password: rootpass
mysql_users:
  - name: "mysqluser"
    host: "localhost"
    password: "password"
    priv: "my_database.*:ALL"
mysql_packages:
  - mariadb-client
  - mariadb-server
  - python-mysqldb
mysql_databases:
  - name: "my_database"
    encoding: utf8
    collation: utf8_general_ci

#NGINX
nginx_remove_default_vhost: true
nginx_vhosts:
  - server_name: "_"
    listen: "80"
    extra_parameters: |
      location / {
        proxy_set_header    Host $http_host;
        proxy_set_header    X-Real-IP $remote_addr;
        proxy_pass          http://127.0.0.1:8080;
      }
    root: "_"

